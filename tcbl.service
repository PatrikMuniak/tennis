[Unit]
Description=Gunicorn for Tennis Court Booking London
After=network.target

[Service]
User=ec2-User
Group=www-data
WorkingDirectory=/local/tcbl/
Environment="PATH=/local/tcbl/venv/bin"
ExecStart=/local/tcbl/venv/bin/gunicorn -w 4 --bind unix:app.sock -m 007 --chdir /local/tcbl/src app:app

[Install]
WantedBy=multi-user.target  